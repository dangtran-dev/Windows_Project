                            <StackPanel Grid.Column="4" Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal" Padding="5">
                                <FontIcon Glyph="&#xECAF;" Foreground="Gray"/>
                                <TextBlock Text="Tỉnh thành" Margin="10,0,0,0" FontWeight="Bold"/>
