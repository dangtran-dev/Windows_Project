                            <TextBlock Grid.Column="1" Grid.Row="2" x:Name="DistrictCarTextBlock" Padding="5"/>

                            <StackPanel Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Orientation="Horizontal" Padding="5">
