                                    </TextBlock>
                                </StackPanel>

                                <!--Chọn quận/huyện-->
                                <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="10,10,0,0">
