                            </StackPanel>
                            <TextBlock Grid.Column="1" Grid.Row="1" x:Name="OriginCarTextBlock" Padding="5"/>

                            <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal" Padding="5">
