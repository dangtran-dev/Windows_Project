                            <StackPanel Grid.Column="4" Grid.Row="0" HorizontalAlignment="Left" Orientation="Horizontal" Padding="5">
                                <FontIcon Glyph="&#xEA8B;" Foreground="Gray"/>
                                <TextBlock Text="Tình trạng" Margin="10,0,0,0" FontWeight="Bold"/>
                            </StackPanel>
