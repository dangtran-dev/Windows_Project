                                FontSize="16" Margin="0,20,0,0" Padding="10" 
                                HorizontalAlignment="Center" Width="330" Click="Continue_Click"/>
                    </Grid>
                </StackPanel>
                
                <!--Cột đăng ảnh và video-->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center" Orientation="Vertical"
                            VerticalAlignment="Top"
                            BorderBrush="#E1E1E1" BorderThickness="0.5"
